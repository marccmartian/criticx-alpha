<h1>All the Games</h1>

<table border=1>
  <tr>
    <th width="350px" >Name</th><th width="70px" >Rating</th><th></th>
  </tr>

  <% @games.each do |game| %>    
    <tr>
      <td> <%= game.name %>  </td> 
      <td> <%= game.rating %> </td>
      <td> <%= link_to "Show", "/games/#{game.id}" %> </td>
    </tr>
  <% end %>

</table>


